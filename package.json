{
  "name": "simple-chat-app",
  "version": "1.0.0",
  "description": "2人用のシンプルなチャットアプリ",
  "main": "server/src/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/src/index.js",
    "client:dev": "cd client && npm run dev",
    "server": "node server/src/index.js",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production npm run server",
    "install:all": "npm install && cd client && npm install",
    "render-build": "npm run install:all && npm run build"
  },
  "keywords": ["chat", "socket.io", "express", "react"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}